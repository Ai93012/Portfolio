<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.fit.mapper.BoardMapper">
  
  
  
  <!--  공지 등록 -->
  
  <insert id="registerN">
  
 insert into notice(nTitle, nContent) values (#{nTitle}, #{nContent})
  
  </insert>
  
  <!-- 공지 목록 -->
  <select id="getListN" resultType="com.fit.model.NoticeVO">
  	
  	select * from Notice
  </select>
  
  <!-- 공지 목록(페이징) -->
  <select id="getListPaging" resultType="com.fit.model.NoticeVO">
  	<![CDATA[
  	
  	    select nbno, ntitle, ncontent, aId, nreg  from(
        select /*+INDEX_DESC(notice notice_pk) */ rownum as rn, nbno, ntitle, ncontent, aid, nreg 
        from notice where rownum <= #{pageNum} * #{amount})
        
        where rn > (#{pageNum} -1) * #{amount}
  	
  	
  	]]>
  	
 
  
  
  </select>
  
  
  <!-- 공지 조회 -->
  <select id="getPageN" resultType ="com.fit.model.NoticeVO">
  	select * from Notice where nBno = #{nBno}
  
  </select>
  
  <!-- 공지 수정 -->
  <update id="modifyN">
  
   update notice set nTitle = #{nTitle}, nContent = #{nContent}
   where nBno = #{nBno}
  </update>
  
  
  
  <!-- 공지 삭제 -->
 <delete id="deleteN">
 	delete from notice where nBno = #{nBno}
 	
 </delete>
  
  <!-- 공지 게시물 총 개수 -->
  <select id="getTotal" resultType="int">
  	select count(*) from notice
  </select>
  
  
  </mapper>