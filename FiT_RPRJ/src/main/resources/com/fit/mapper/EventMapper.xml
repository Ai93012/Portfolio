<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.fit.mapper.EventMapper">
  
<insert id="enrollE">

insert into event(etitle, econtent) values (#{eTitle}, #{eContent} )

</insert>

<!-- 이벤트 게시판 목록 -->
  <select id="getListE" resultType="com.fit.model.EventVO">
  
  select * from event
  
  </select>
  
  <!-- 이벤트 게시판 조회 -->
  <select id="getPageE" resultType="com.fit.model.EventVO">
  
  select * from event where ebno = #{ebno}
  
  </select>
  
  
  <!-- 이벤트 글 수정 -->
  <update id="modifyE">
  
  update event set eTitle = #{eTitle}, eContent = #{eContent}
   where eBno = #{eBno}
  
  </update>
  
   <!-- 이벤트 게시판 삭제 -->
 <delete id="deleteE">
 	delete from event where eBno = #{eBno}
 	
 </delete>
  
  
  </mapper>